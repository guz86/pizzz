<h2>Welcome to Candy shop</h2>


<div class="row">
	<% @products.each do |p| %>
	<div class="col-md-3">
		<div>
			<%= p.title %>
		</div>

		<div>
			<img src="<%= p.path_to_image %>" />
		</div>

		<div>
			<%= p.descrition %>
		</div>
		<div>
			Price: <%= p.price %>
		</div>
		<div>
			Size: <%= p.size %>
		</div>
	</div>
	<% end %>
</div>

<button class="btn btn-primary" onClick="something()">Click me!</button>
